@page
@model lab6.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <h1 class="my-4">Task List</h1>
    <a class="btn btn-primary mb-2" href="/Create">add a new task</a>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (IndexModel.Tasks.Count == 0)
    {
        <p>no task has been added</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var task in IndexModel.Tasks)
            {
                <li class="list-group-item">@task</li>
            }
        </ul>
    }
</div>